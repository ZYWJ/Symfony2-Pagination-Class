<div class="paginator">
    <ul>
        {% if paginator.currentpage != 1 %}
            <span> <a class="previous" href="{{ path(app.request.attributes.get('_route'), {  'offset': paginator.currentpage-1 }) }}">上一页</a></span>
        {% endif %}
        {% for i in 1..paginator.numpages %}
            {% if paginator.range.0 > 2 and i == paginator.range.0 %}
                  ...
            {% endif %}

            {%  if(i==1 or i==paginator.numpages or i in paginator.range) %}
                {% if i==paginator.currentpage %}
                    <span><a class="active" href="{{ path(app.request.attributes.get('_route'), {  'offset': i })}}">{{i}}</a></span>
                {% else %}
                <span><a href="{{ path(app.request.attributes.get('_route'), {  'offset': i }) }}"> {{i}}</a></span>
                {% endif %}
            {% endif %}

            {% if paginator.range[paginator.midrange -1] < paginator.numpages -1 and i == paginator.range[paginator.midrange-1] %}
                ...
            {% endif %}
        {% endfor %}
        {% if paginator.currentpage + 1 <= paginator.numpages %}
            <span> <a class="next" href="{{ path(app.request.attributes.get('_route'), {  'offset': paginator.currentpage+1 }) }}">下一页</a></span>
        {% endif %}
    </ul>
</div>

</div>
